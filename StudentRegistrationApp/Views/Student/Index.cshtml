@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<h3 class="text-info">Student List</h3>
<hr/>

<a asp-action="Register" class="btn btn-lg btn-success">Register</a>

@if (Model.Count() > 0)
{
   
        <table class="table table-striped">
            <tr>
                <th>@Html.DisplayNameFor(m=>m.Name)</th>
                <th>@Html.DisplayNameFor(m=>m.Age)</th>
                <th>@Html.DisplayNameFor(m=>m.Class)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>item.Name)</td>
                    <td>@Html.DisplayFor(m=>item.Age)</td>
                    <td>@Html.DisplayFor(m=>item.Class)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </table>

}
else
{
    <div>No student. Register new student.</div>
}
