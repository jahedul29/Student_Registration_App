@model Student
@{
    ViewData["Title"] = "Register";
}

<h3 class="text-info">Register New Student</h3>
<br />
<div class="container">
    <div style="padding: 30px; border: 2px solid black">
        <form asp-action="Register">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Age"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Age" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Class"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Class" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-3">
                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                        <a asp-action="Index" class="btn btn-sm btn-primary">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

